---
import Layout from '../layouts/Layout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    title: 'I will post my projects here',
    description: '...coming soon!',
    href: '#'
  }
];
---
<Layout title="Projects | Alberto Ferreira" description="Selected experiments and tinkering by Alberto Ferreira de Melo.">
  <SiteHeader />
  <main>
    <section>
      <div class="intro card">
        <h1>Projects & Experiments</h1>
        <p>
          A growing collection of prototypes, tools, and small explorations â€” where ideas meet code. These projects range from   
          AI experiments, 3D printing things to creative side builds.
        </p>
      </div>
    </section>

    <section>
      <div class="grid">
        {projects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
    </section>
  </main>
  <SiteFooter />
</Layout>

<style>
  h1 {
    font-family: var(--font-serif);
  }

  .intro {
    display: grid;
    gap: 1.5rem;
    background: linear-gradient(150deg, rgba(255, 179, 71, 0.18), transparent 60%);
  }

  .intro p {
    margin: 0;
    color: var(--color-text-muted);
    max-width: 55ch;
  }

  .grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(18rem, 1fr));
  }
</style>
