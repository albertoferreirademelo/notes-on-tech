---
import PersonalLayout from '../layouts/PersonalLayout.astro';
import NoteList from '../components/NoteList.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

// Notes live in src/content/posts/. Each Markdown file becomes a note that
// automatically appears here once draft is set to false (or omitted).
const latestNotes = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 4);

// Update this list whenever a project or experiment needs a spotlight.
// Link to posts, standalone pages, or external prototypes.
const projects = [
  {
    title: 'Warm tech journal',
    description: 'A living log of how AI, data, and design overlap in my day-to-day experiments.',
    href: '/blog/hello-world/',
  },
  {
    title: 'Everyday datasets',
    description: 'Collecting small, humane datasets from daily routines to test more mindful machine learning ideas.',
  },
  {
    title: 'Spatial notes',
    description: 'Sketching with lidar scans and 3D prints to understand places — from Stockholm tunnels to tiny home layouts.',
  },
];

// Quick scratchpad thoughts — keep them brief, exploratory, and human.
const roughThoughts = [
  {
    text: 'Wondering how to teach Swedish idioms to small language models without sanding off their charm.',
    language: 'en',
  },
  {
    text: 'Experimenterar med att skriva dagliga promptloggar på svenska för att se hur tonen förändras över tid.',
    language: 'sv',
  },
  {
    text: 'Notebook idea: map curiosity across projects each week to spot neglected threads.',
    language: 'en',
  },
];
---
<PersonalLayout title="Alberto Ferreira de Melo" description="Thoughts, experiments, and notes on technology and life.">
  <section class="intro card">
    <h2>Hej, I’m Alberto.</h2>
    <p>
      This is my digital notebook — a calm space for the projects, prompts, and questions that keep me curious.
      You’ll find ongoing AI experiments, design sketches, small datasets, and the occasional Swedish reflection.
    </p>
    <p>
      I keep several threads open at once. Some become essays, others stay rough edges — all of them show the work in progress.
    </p>
  </section>

  <section aria-labelledby="latest-notes" class="stack">
    <div class="section-heading">
      <h2 id="latest-notes">Latest notes</h2>
      <a href="/notes" class="section-link">See all notes</a>
    </div>
    <NoteList notes={latestNotes} />
  </section>

  <section aria-labelledby="projects" class="stack">
    <div class="section-heading">
      <h2 id="projects">Projects &amp; experiments</h2>
      <p class="section-subtitle">Ways I tinker between technology, design, and data.</p>
    </div>
    <div class="project-grid">
      {projects.map((project) => (
        <ProjectCard {...project} />
      ))}
    </div>
  </section>

  <section aria-labelledby="rough-thoughts" class="stack">
    <div class="section-heading">
      <h2 id="rough-thoughts">Rough thoughts</h2>
      <p class="section-subtitle">Unpolished drafts, bilingual musings, and prompts to chase later.</p>
    </div>
    <ul class="thoughts">
      {roughThoughts.map((thought) => (
        <li>
          <span class="thought-language">{thought.language.toUpperCase()}</span>
          <p>{thought.text}</p>
        </li>
      ))}
    </ul>
  </section>
</PersonalLayout>

<style>
  .intro h2 {
    margin: 0 0 0.75rem;
    font-family: var(--font-serif);
    font-size: clamp(1.8rem, 3vw + 1rem, 2.4rem);
  }

  .intro p {
    color: var(--color-text-muted);
    max-width: 50ch;
  }

  .stack {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section-heading {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .section-heading h2 {
    margin: 0;
    font-family: var(--font-serif);
    font-size: 1.6rem;
  }

  .section-link {
    align-self: flex-start;
    font-size: 0.9rem;
    letter-spacing: 0.04em;
  }

  .section-subtitle {
    margin: 0;
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .project-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
  }

  .thoughts {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 1rem;
  }

  .thoughts li {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 1.1rem 1.3rem;
    display: grid;
    gap: 0.45rem;
  }

  .thought-language {
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .thoughts p {
    margin: 0;
    color: var(--color-text-muted);
  }
</style>
