---
const { title = 'Notes on Tech, AI, and Life in Sweden', description = 'Warm, curious notes on technology, artificial intelligence, and life abroad.' } = Astro.props;
const plausibleDomain = Astro.props.plausibleDomain ?? '';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/theme.css" />
    {plausibleDomain && (
      <script
        is:inline
        data-domain={plausibleDomain}
        src="https://plausible.io/js/script.js"
        defer
      ></script>
    )}
  </head>
  <body>
    <slot />
  </body>
</html>
