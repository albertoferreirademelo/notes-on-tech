---
import type { CollectionEntry } from 'astro:content';

interface Props {
  notes: CollectionEntry<'notes'>[];
}

const { notes } = Astro.props;
const base = import.meta.env.BASE_URL || '/';
const normalizeBase = base === '/' ? '' : base.replace(/\/$/, '');
const withBase = (path: string) => (path.startsWith('/') ? `${normalizeBase}${path}` : path);
---
<ul class="note-list">
  {notes.map((note) => {
    const formattedDate = note.data.pubDate.toLocaleDateString('en-GB', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    });
    const language = (note.data.lang ?? 'en').toUpperCase();
    return (
      <li>
        <a href={withBase(`/notes/${note.slug}/`)}>
          <header>
            <span class="note-date">{formattedDate}</span>
            <span class="note-lang">{language}</span>
          </header>
          <h3>{note.data.title}</h3>
          <p>{note.data.description}</p>
        </a>
      </li>
    );
  })}
</ul>

<style>
  .note-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 1.25rem;
  }

  li {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: border-color var(--transition), transform var(--transition);
  }

  a {
    display: grid;
    gap: 0.65rem;
    padding: 1.3rem 1.4rem;
    color: inherit;
  }

  li:hover,
  li:focus-within {
    border-color: rgba(76, 183, 181, 0.35);
    transform: translateY(-2px);
  }

  header {
    display: flex;
    justify-content: space-between;
    gap: 0.75rem;
    font-size: 0.82rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .note-lang {
    background: rgba(76, 183, 181, 0.12);
    color: var(--color-accent);
    padding: 0.1rem 0.55rem;
    border-radius: 999px;
  }

  h3 {
    margin: 0;
    font-family: var(--font-serif);
    font-size: 1.2rem;
  }

  p {
    margin: 0;
    color: var(--color-text-muted);
  }

  @media (max-width: 520px) {
    a {
      padding: 1.1rem 1.2rem;
    }
  }
</style>
