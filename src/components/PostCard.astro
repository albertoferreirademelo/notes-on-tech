---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { data } = post;
---
<article class="card post-card">
  <header>
    <p class="meta">{data.pubDate.toLocaleDateString('en-GB', { year: 'numeric', month: 'short', day: 'numeric' })}</p>
    <h3><a href={`/blog/${post.slug}/`}>{data.title}</a></h3>
  </header>
  <p class="description">{data.description}</p>
  {data.tags && data.tags.length > 0 && (
    <ul class="tags" aria-label="Tags">
      {data.tags.map((tag) => (
        <li class="tag">{tag}</li>
      ))}
    </ul>
  )}
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .meta {
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.8rem;
  }

  h3 {
    margin: 0;
    font-family: var(--font-serif);
    font-size: clamp(1.25rem, 2vw + 0.8rem, 1.8rem);
  }

  .description {
    margin: 0;
    color: var(--color-text-muted);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
    list-style: none;
  }
</style>
